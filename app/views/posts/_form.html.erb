<div class="container mt-4">
	<div>
		<span class="h6 p-2 mr-2 custom-status">Status</span>
		<span class="h6 p-2 mr-2 ">Photos</span>
		<span class="h6 p-2 mr-2 ">Videos</span>
	</div>
	<div>
		<%= form_for(@new_post) do |f| %>
		  <div class="d-flex">
				<%= gravatar_helper current_user %>
				<div>
					<div>
						<%= f.text_field :content %>
					</div>
					<div>
						<%= f.text_field :image_link %>
					</div>
				</div>
			</div>
			<div>
			<div class="d-flex">
				<div>
					<span class="mr-4"><i class="fa fa-smile-o" aria-hidden="true"></i></span>
					<span class="mr-4"><i class="fa fa-bed" aria-hidden="true"></i></span>
					<span class="mr-4"><i class="fa fa-snowflake-o" aria-hidden="true"></i></span>
				</div>
				<%= f.submit "Share" %>
				</div>
			</div>
			
		<% end %>
	</div>
</div>
