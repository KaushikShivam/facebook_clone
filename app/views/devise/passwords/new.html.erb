<div class="container mt-5">
<h2 class="color-primary">Forgot your password?</h2>

  <div class="row">
    <div class="col-6">
      <img src="https://i.pinimg.com/originals/ab/d9/e6/abd9e61402fe1e8f0e19ee54f7cec8af.jpg" alt="background" class="login-bg">
    </div>
    <div class="col-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: 'col-form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary px-5" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


